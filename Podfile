target 'SYNovelbb' do
  use_frameworks!

  pod 'RxSwift', '~> 5.1.0'
  pod 'RxCocoa', '~> 5.1.0'
  pod 'RxDataSources', '~> 4.0.1'
  pod 'Moya/RxSwift', '~> 14.0'
  pod 'R.swift'
  # Mapping
  pod 'HandyJSON', '~> 5.0.2'
  
  # 自动布局
  pod 'SnapKit', '~> 4.0.0'
  
  # 滚动切换视图
  pod 'JXSegmentedView'
  
  # 图片加载
  pod 'Kingfisher', '~> 4.6.1'
  
  # 占位图
  pod 'DZNEmptyDataSet'
  
  # FireBae统计分析
  pod 'Firebase/Analytics'
  pod 'Firebase/Messaging'
  pod 'Firebase/DynamicLinks'
  
  # YYKit
  pod 'YYCategories'
  pod 'YYText'
  pod 'YYCache'
  
  # 上下拉刷新
  pod 'MJRefresh', '~> 3.4.3'
  # 右滑返回
  pod 'FDFullscreenPopGesture'
  # 轮播
  pod 'JXBanner'
  # 加载框
  pod 'NVActivityIndicatorView'
  # 提示框
  pod 'MBProgressHUD', '~> 1.2.0'
  
  # 内购
  pod 'SwiftyStoreKit'
  
  # 日志
  pod 'CocoaLumberjack/Swift', '~> 3.6.1'
  # 数据库
  pod 'RealmSwift'
  
  # 第三方平台登录
  pod 'mob_sharesdk'  # 主模块
  pod 'mob_sharesdk/ShareSDKPlatforms/Apple' # 苹果登录
  pod 'mob_sharesdk/ShareSDKPlatforms/Facebook_Lite'  # Facebook登录
  # Google登录
  pod 'GoogleSignIn'
  # Line登录
  pod 'LineSDKSwift', '~> 5.0'
  
  # 崩溃日志收集
  pod 'Bugly'
  
  # UI调试
  pod 'LookinServer', :configurations => ['Debug']
  
  # 网络请求监控
  pod 'Bagel', :configurations => ['Debug']

  target 'SYNovelbbTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SYNovelbbUITests' do
    # Pods for testing
  end

end
